{
  "name": "functional-types",
  "version": "1.2.0-alpha-2",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kakekomu/functional-types.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build",
    "clean": "lerna run clean --parallel",
    "test": "jest",
    "format": "prettier --write \"packages/**/*.ts\"",
    "lint": "eslint 'packages/**/*.ts'",
    "start:examples": "yarn workspace examples start",
    "release": "lerna version",
    "release-github": "lerna publish from-registry --yes --registry https://npm.pkg.github.com/",
    "release-npm": "lerna publish from-registry --yes --registry https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint 'packages/**/*.ts' --fix",
      "prettier --parser typescript --write 'packages/**/*.ts'",
      "git add --patch"
    ]
  },
  "keywords": [],
  "author": "Kakekomu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kakekomu/functional-types/issues"
  },
  "homepage": "https://github.com/kakekomu/functional-types#readme",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rollup": "^1.27.12",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {}
}

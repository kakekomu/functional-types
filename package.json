{
  "name": "functional-types",
  "version": "1.2.0-alpha-1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kakekomu/remote-data.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build",
    "clean": "lerna run clean --parallel",
    "test": "jest",
    "format": "prettier --write \"packages/**/*.ts\"",
    "lint": "eslint 'packages/**/*.ts'",
    "start:examples": "yarn workspace examples start",
    "release": "lerna version",
    "release-ci": "lerna publish from-git --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint 'packages/**/*.ts' --fix",
      "prettier --parser typescript --write 'packages/**/*.ts'",
      "git add --patch"
    ]
  },
  "keywords": [],
  "author": "Kakekomu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kakekomu/remote-data/issues"
  },
  "homepage": "https://github.com/kakekomu/remote-data#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "eslint": "^6.7.2",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "rollup": "^1.17.0",
    "rollup-plugin-typescript2": "^0.22.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  }
}
